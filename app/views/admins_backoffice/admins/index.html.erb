<h1> Lista de admins </h1>
<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
  <tr>
    <th>Email</th>
    <th>Nome</th>
    <th>Iduff</th>
    <th>Ativo</th>
  </thead>
  <tbody>
  <% @admins.each do |admin| %>
    <tr>
      <td><%= admin.email %></td>
      <td><%= admin.name %></td>
      <td><%= admin.iduff %></td>
      <td><%= admin.active.to_s %></td>
      <td><%= link_to 'Olhe', admins_backoffice_admin_path(admin),class: "btn" %></td>
      <% if admin!= current_admin %>
        <td><%= link_to 'Edite', edit_admins_backoffice_admin_path(admin),class: "btn" %></td>
        <% if admin.active %>
          <td><%= link_to 'Desative',  admins_backoffice_admin_destroy_admin_path(admin),class: "btn", data: { confirm: 'Tem certeza?' } %></td>
        <% else %>
          <td><%= link_to 'Reativar',  admins_backoffice_admin_reactive_admin_path(admin),class: "btn", data: { confirm: 'Tem certeza?' } %></td>
        <% end %>
      <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Novo admin', new_admins_backoffice_admin_path %>