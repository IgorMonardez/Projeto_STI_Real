<p id="notice"><%= notice %></p>

<h1> Lista de Usuários </h1>
<table id="example">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Nome</th>
      <th>iduff</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= user.name %></td>
      <td><%= user.iduff %></td>
      <td><%= link_to 'Olhar', admins_backoffice_user_path(user) %></td>
      <td><%= link_to 'Editar', edit_admins_backoffice_user_path(user) %></td>
      <% if user.active %>
        <td><%= link_to 'Desativar',  admins_backoffice_user_destroy_user_path(user), :method => :patch, data: { confirm: 'Tem certeza?' } %></td>
      <% else%>
        <td><%= link_to 'Reative',  admins_backoffice_user_reactive_user_path(user), :method => :patch, data: { confirm: 'Tem certeza?' } %></td>
      <%end %>

    </tr>
  <% end %>

  </tbody>
</table>

