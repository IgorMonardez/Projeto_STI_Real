<%= form_with(model: [:users_backoffice_user, @carona]) do |form| %>
  <% if @carona.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@carona.errors.count, "error") %> proibe essa carona de ser salva:</h2>
      <ul>
        <% @carona.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :preco %>
    <%= form.number_field :preco %>
  </div>

  <div class="field">
    <%= form.label :quantidade_de_passageiros %>
    <%= form.number_field :qtd_passageiros %>
  </div>

  <div class="field">
    <%= form.label :dia_e_hora %>
    <%= form.datetime_select :date_hour %>
  </div>

  <div class="field">
    <%= label_tag(:campus1, "Campus") %>
    <%= check_box 'campus1', 'result', {},1,0 %>
  </div>

  <div class="field">
    <%= form.label :partida %>
    <%= form.collection_select :departure, Campu.all, :nome, :nome_campus%>

  </div>

  <% if params[:campus1] %>

  <% else %>
    <div class="field">
      <%= form.label :partida %>
      <%= form.text_field :departure %>
    </div>

    <div class="field">
      <%= form.label :chegada %>
      <%= form.text_field :arrival %>
    </div>

    <div class="field">
      <%= form.label :comentarios %>
      <%= form.text_field :comments %>
    </div>

    <h3> Pontos intermedi√°rios</h3>

    <div>
      <%= form.fields_for :points do |point| %>
        <%= render 'point_fields',  :f => point %>
      <% end %>
      <div>
        <br>
        <%= link_to_add_association 'Adicionar Parada', form, :points %>
      </div>
    </div>
  <% end %>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
